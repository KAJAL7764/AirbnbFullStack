<% layout("/layouts/boilerplate") %>
<div class="row mt-5">
  <div class="col-8 offset-2">
    <h2>Edit Your Listings</h2>
    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
      id="edit-listing-form"
    >
      <div class="mb-3">
        <label for="title" class="form-level">Title</label>
        <input
          name="listing[title]"
          value="<%= listing.title %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a title</div>
        <div class="valid-feedback">Title Looks Good!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-level"> Description</label>
        <textarea class="form-control" name="listing[description]" required>
<%= listing.description %> </textarea
        >
        <div class="invalid-feedback">Please enter short descriptions</div>
      </div>

      <div class="row">
        <div class="mb-3 col-8">
            Original Listing Img <br>
            <img src="<%= listing.image.url %>" alt="" class="img-fluid">
        </div>
    </div>
    
      <div class="mb-3">
        <label for="image" class="form-level">Upload new Img</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
       
        />
        <div class="invalid-feedback">Please enter a valid URL</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-level">Price</label>
          <input
            name="listing[price]"
            value="<%= listing.price %>"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="counter" class="form-level">Country</label>
          <input
            name="listing[country]"
            value="<%= listing.country %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter country nane</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-level">Location</label>
        <input
          name="listing[location]"
          value="<%= listing.location %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter valid location</div>
      </div>
      <button class="btn btn-dark edit-btn mt-3">Updated</button>
    </form>
  </div>
</div>
