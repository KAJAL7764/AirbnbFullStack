<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
    <div class="col-8 offset-2">
     <br>
     <br>
    <h2>Create a new Linstings</h2>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-4"> 
      <label for="title" class="form-level">Title</label>
       <input name="listing[title]" placeholder="add a catchy title" type="text" class="form-control" required>
        <div class="invalid-feedback">Please enter a title</div>
    <div class="valid-feedback">Title Looks Good!</div>
    </div>

    <div class="mb-4"> 
        <label for="description" class="form-level">description</label>
        <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
        <div class="invalid-feedback">Please enter short descriptions</div>
    </div>

        <div class="mb-4"> 
            <label for="link" class="form-level">Upload Listing Image</label>
            <input name="listing[image]" type="file" class="form-control">  
            <div class="invalid-feedback">Please enter a valid URL</div>
            </div>

    <div class="row ">
        <div class="mb-4 col-md-4"> 
            <label for="number" class="form-level">Price</label>
        <input name="listing[price]" placeholder="4200"  class="form-control" required>
        <div class="invalid-feedback">Price should be valid</div>
        </div>   
        <div class="mb-4 col-md-8"> 
            <label for="country" class="form-level">Country</label>
        <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
        <div class="invalid-feedback">Please enter country name</div>
        </div>
         
    </div>
        
        <div class="mb-4"> 
            <label for="location" class="form-level">Location</label>
        <input name="listing[location]" placeholder="Bihar, Patna" type="text" class="form-control" required>
        <div class="invalid-feedback">Please enter valid location</div>
        </div>
        <br> 
        <br>
         <button class="btn btn-dark add-btn">Add</button>
         <br>
         <br>
    </form>
    <div>

    </div>

